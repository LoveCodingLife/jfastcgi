<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.jfastcgi.parent</groupId>
    <artifactId>jfastcgi-build</artifactId>
    <version>2.3-SNAPSHOT</version>
    <packaging>pom</packaging>


    <prerequisites>
        <maven>3.0</maven>
    </prerequisites>

    <name>jFastCGI - FastCGI for Java &amp; the JVM</name>
    <description>
        The jFastCGI project is aimed at helping developers work with FastCGI on the Java platform.
        The jFastCGI project allows a servlet container to act as a fastCGI gateway so it can serve content generated by a fastCGI producer.
    </description>
    <url>http://www.jfastcgi.org</url>

    <scm>
        <connection>scm:git@github.com:jFastCGI/jfastcgi.git</connection>
        <developerConnection>scm:git@github.com:domdorn/jfastcgi.git</developerConnection>
        <tag>HEAD</tag>
    </scm>

    <distributionManagement>
        <site>
            <id>jfastcgi_website</id>
            <url>ftp://jfastcgi.org/</url>
        </site>
    </distributionManagement>

    <modules>
        <module>parent</module>
        <module>server</module>
        <module>client</module>
    </modules>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-release-plugin</artifactId>
                <version>2.3.1</version>
                <configuration>
                    <pushChanges>false</pushChanges>
                    <localCheckout>true</localCheckout>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-site-plugin</artifactId>
                <version>3.3</version>
                <configuration>
                    <locales>en</locales>
                </configuration>
            </plugin>
        </plugins>
        <extensions>
            <!-- Enabling the use of FTP -->
            <extension>
                <groupId>org.apache.maven.wagon</groupId>
                <artifactId>wagon-ftp</artifactId>
                <version>2.4</version>
            </extension>
        </extensions>
    </build>

    <reporting>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <version>2.8</version>
            </plugin>
        </plugins>
    </reporting>

    <mailingLists>
        <mailingList>
            <name>Announcements</name>
            <subscribe>jfastcgi-announces@lists.sourceforge.net</subscribe>
        </mailingList>
    </mailingLists>

